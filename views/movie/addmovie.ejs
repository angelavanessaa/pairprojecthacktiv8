<body>
    <%- include('../partials/navbar')%>
    <div class="jumbotron">
            <h1>Add Movie</h1>
    </div>
    <div class="container">
            <div class="col-md-6 mx-auto text-center">
                <div class="header-title">
                    <h1 class="wv-heading--title">Add Movie</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mx-auto">
                    <div class="myform form ">
                        <form action="/movies/add" method="post" name="login">
                            <div class="form-group">
                                <input type="text" name="name"  class="form-control my-input" id="name" placeholder="Name">
                            </div>
                            <div class="form-group">
                                    <input type="number" name="maxtickets"  class="form-control my-input" id="name" placeholder="Tickets">
                            </div>
                            <div class="form-group">
                                    <input type="number" name="price"  class="form-control my-input" id="name" placeholder="price">
                            </div>
                            <div class="form-group">
                                <p>Start Date</p>
                                <input type="date" name="tayang"  class="form-control my-input" id="email">
                            </div>
                            <div class="form-group">
                                <p>End Date</p>
                                <input type="date" name="end"  class="form-control my-input" id="email">
                            </div>
                            <div class="form-group">
                                <input type="text" name="image" id="phone"  class="form-control my-input" placeholder="poster image">
                            </div>
                            <div class="text-center ">
                                <button type="submit" class=" btn btn-block send-button tx-tfm">Submit Movie</button>
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
